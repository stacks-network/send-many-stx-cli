{
  "name": "@stacks/send-many-stx-cli",
  "description": "A simple CLI for making a bulk STX transfer in one command.",
  "author": "Hiro PBC",
  "version": "1.4.0",
  "license": "MIT",
  "homepage": "https://github.com/stacks-network/send-many-stx-cli",
  "repository": {
    "type": "git",
    "url": "https://github.com/stacks-network/send-many-stx-cli.git"
  },
  "main": "dist/index.js",
  "files": [
    "dist",
    "src",
    "/oclif.manifest.json"
  ],
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "start": "ts-node src/start.ts",
    "compile": "ncc build src/index.ts --no-source-map-register -e @oclif/command -e @oclif/errors",
    "build-single-file": "npm run compile && oclif-dev readme",
    "build": "rm -rf dist && tsc -b && oclif-dev readme && oclif-dev manifest",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "docs": "oclif-dev readme",
    "version": "npm run build",
    "typecheck": "tsc --noEmit",
    "postpack": "rm -f oclif.manifest.json",
    "prepack": "npm run build"
  },
  "bin": {
    "stx-bulk-transfer": "./bin/run"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "oclif": {
    "commands": "./dist/commands",
    "bin": "stx-bulk-transfer"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/bulk-send.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/bulk-send.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@oclif/config": "^1.17.0",
    "@oclif/dev-cli": "^1.26.0",
    "@oclif/errors": "^1.3.4",
    "@size-limit/preset-small-lib": "^4.9.1",
    "@vercel/ncc": "0.27.0",
    "cli-ux": "^5.5.1",
    "husky": "^4.3.8",
    "oclif": "^1.16.1",
    "size-limit": "^4.9.1",
    "ts-node": "^10.9.2",
    "tsdx": "^0.14.1",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@oclif/command": "^1.8.0",
    "@stacks/transactions": "^7.0.4",
    "c32check": "^1.1.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
